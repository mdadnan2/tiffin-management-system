generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  CUSTOM
}

enum MealStatus {
  ACTIVE
  CANCELLED
}

model User {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  mobile       String?
  passwordHash String
  role         UserRole       @default(USER)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  meals        MealRecord[]
  priceSetting PriceSetting?

  @@map("users")
}

model MealRecord {
  id              String     @id @default(uuid())
  userId          String
  date            DateTime   @db.Date
  mealType        MealType
  count           Int        @default(1)
  note            String?
  priceAtTime     Decimal    @default(0) @db.Decimal(10, 2)
  status          MealStatus @default(ACTIVE)
  isBulkScheduled Boolean    @default(false)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date, mealType])
  @@map("meal_records")
}

model PriceSetting {
  id        String   @id @default(uuid())
  userId    String   @unique
  breakfast Decimal  @default(0) @db.Decimal(10, 2)
  lunch     Decimal  @default(0) @db.Decimal(10, 2)
  dinner    Decimal  @default(0) @db.Decimal(10, 2)
  custom    Decimal  @default(0) @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("price_settings")
}
