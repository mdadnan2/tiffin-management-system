{
  "name": "tiffin-management",
  "version": "0.0.1",
  "description": "Tiffin Management System - Phase 3 (Microservices)",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",

    "build:auth": "nest build auth-service",
    "build:user": "nest build user-service",
    "build:meal": "nest build meal-service",
    "build:admin": "nest build admin-service",
    "build:all": "npm run build:auth && npm run build:user && npm run build:meal && npm run build:admin",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",

    "start:auth": "nest start auth-service --watch",
    "start:user": "nest start user-service --watch",
    "start:meal": "nest start meal-service --watch",
    "start:admin": "nest start admin-service --watch",
    "start:frontend": "cd frontend && npm run dev",
    "start:db": "docker-compose up -d db",
    "setup": "npm run migrate && npm run seed",
    "check": "node check-consul.js",
    "test:api": "bash test-api.sh",

    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:migrate": "docker exec tiffin-auth-dev npx prisma migrate deploy",
    "docker:dev:setup": "npm run docker:dev:migrate && docker exec tiffin-auth-dev npx prisma db seed",
    "docker:up": "docker-compose up -d",
    "docker:build": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:setup": "docker exec tiffin-db psql -U postgres -d tiffin_db -c \"INSERT INTO users (id, email, name, passwordHash, role, createdAt, updatedAt) VALUES (gen_random_uuid(), 'demo@tiffin.com', 'Demo User', '$2b$10$A9ajG4dlN48JeIWvrsEub.LDtdYpd4kIeSaMcqmG8jVCefjrjEJv6', 'USER', NOW(), NOW()), (gen_random_uuid(), 'admin@tiffin.com', 'Admin User', '$2b$10$A9ajG4dlN48JeIWvrsEub.LDtdYpd4kIeSaMcqmG8jVCefjrjEJv6', 'ADMIN', NOW(), NOW()) ON CONFLICT (email) DO NOTHING;\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",

    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "seed": "ts-node prisma/seed.ts",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "kill:port": "kill-port.bat"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.7.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
